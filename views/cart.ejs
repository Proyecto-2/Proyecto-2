<section id="cart" class="container">
    <div class="row">
        <h1>Cart</h1>
        
        <table class="table">
            <tr>
                <th class="th-pro" colspan="2">Producto</th>
                <th>Texto</th>
                <th>Tipo</th>
                <th>Precio</th>
                <th>Cantidad</th>
                <th>Total</th>
            </tr>
            
            <tr>
                <td class="mt"><i class="glyphicon glyphicon-remove-circle"></i></td>
                <td><img src="/<%= cart.products[0].url_img %>" alt=""></td>
                <td class="texto mt"><%= cart.products[0].texto %></td>
                <td class="tipo mt"><%= cart.products[0].tipo %></td>
                <td class="precio mt"><%= cart.products[0].precio %>€</td>
                <td class="cantidad mt"><%=cart.products[0].cantidad %></td>
                <td class="pro-to mt"><%=cart.products[0].precio * cart.products[0].cantidad %>€</td>
            </tr>
          
        </table>
        <p>Subtotal: <span><%=cart.products[0].precio * cart.products[0].cantidad %></span><span id="euros">€</span></p>
        <a id="volver" href="/tipo">Comprar +</a>
        <a href="#" id="pagar">Pagar</a>
    </div>
</section>



