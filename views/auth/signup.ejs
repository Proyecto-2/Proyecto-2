<section id="sign" class="container">
    <div class="row">          
        <div id="form-sign" class="col-md-4">
            <h1>Sign Up</h1>
            <form action="/signup" method="POST" id="form-container" class="signup">
                <div class="form-group">
                    <input type="text" name="name" placeholder="Nombre y Apellidos" required>
                </div>
                <div class="form-group">
                    <input type="email" name="mail" placeholder="Correo" required>
                </div>
                <div class="form-group">
                    <input type="text" name="username" placeholder="Usuario" required>
                </div>
                <div class="form-group">
                    <input type="password" name="password" placeholder="ContraseÃ±a" required>
                </div>
                <button>Sign up</button>
            </form>

            <% if (typeof(message) !== "undefined") { %>
                <div class="error-message">
                    <%= message %>
                </div>
            <% } %>
        </div>
        <div id="img-sign" class="col-md-8"></div>
    </div>
</section>  
